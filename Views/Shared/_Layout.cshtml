<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScannerWebAppUpdate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScannerWebAppUpdate.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/materialize.min.css"/>
    <link rel="stylesheet" href="~/css/styles.css"/>
    <!-- Include jQuery Library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>


    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />

    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>


    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/js/materialize.min.js"></script>
    <style>
        /* Ensure the .brand-logo has no padding or margin */
        .brand-logo {
            padding: 0 !important;
            margin: 0 !important;
            display: flex !important; /* Use flexbox for vertical centering */
            align-items: center !important;
            height: 100% !important; /* Ensure it takes up the full height of the navbar */
        }

            /* Ensure the image inside .brand-logo is centered and constrained */
            .brand-logo img {
                max-height: 100% !important; /* Constrain the logo's height to fit inside the navbar */
                margin: 0 !important;
                padding: 0 !important;
                vertical-align: middle !important; /* Vertically align the image */
            }
    </style>

</head>
<body class="has-fixed-sidenav">
    <header>

        <div class="navbar-fixed z-depth-1">
            <nav>
                <div class="nav-wrapper z-depth-1 white">
                    <a class="brand-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Resize APS.png"></a>
                    <a href="!#" data-target="mobile-demo" class="sidenav-trigger hide-on-large-only text-blue"><i class="material-icons">menu</i></a>
                </div>
            </nav>
        </div>

    </header>





    <!-- Mobile Sidenav -->
    <ul class="sidenav blue darken-3 white-text" id="mobile-demo">
        <li><a class="white-text" asp-area="" asp-controller="Home" asp-action="Index"><i class="material-icons left indigo-text text-darken-4">dashboard</i>Dashboard</a></li>
        <li><a class="white-text" asp-area="" asp-controller="PurchaseOrders" asp-action=""><i class="material-icons left  indigo-text text-darken-4">receipt</i>Purchase Orders</a></li>
        <li><a class="white-text" asp-area="" asp-controller="Jobs" asp-action=""><i class="material-icons left  indigo-text text-darken-4">work</i>Jobs</a></li>
        <li><a class="white-text" asp-area="" asp-controller="Returns" asp-action=""><i class="material-icons left  indigo-text text-darken-4">swap_horiz</i>Returns</a></li>
        <li><a class="white-text" asp-area="" asp-controller="ScanHistory" asp-action=""><i class="material-icons left  indigo-text text-darken-4">qr_code_scanner</i>Job History</a></li>
        <li><a class="white-text" asp-area="" asp-controller="Settings" asp-action=""><i class="material-icons left  indigo-text text-darken-4">settings</i>Settings</a></li>
        <li><a class="white-text" asp-area="" asp-controller="TestPages" asp-action="">Test Page</a></li>
    </ul>

    <!--Fixed SideNav-->
    <ul class="sidenav blue darken-3 white-text sidenav-fixed hide-on-med-and-down invesible-top" id="mobile-nav">
        <li><a class="white-text" asp-area="" asp-controller="Home" asp-action="Index"><i class="material-icons left  indigo-text text-darken-4">dashboard</i>Dashboard</a></li>
        <li><a class="white-text" asp-area="" asp-controller="PurchaseOrders" asp-action=""><i class="material-icons left  indigo-text text-darken-4">receipt</i>Purchase Orders</a></li>
        <li><a class="white-text" asp-area="" asp-controller="Jobs" asp-action=""><i class="material-icons left  indigo-text text-darken-4">work</i>Jobs</a></li>
        <li><a class="white-text" asp-area="" asp-controller="Returns" asp-action=""><i class="material-icons left  indigo-text text-darken-4">swap_horiz</i>Returns</a></li>
        <li><a class="white-text" asp-area="" asp-controller="ScanHistory" asp-action=""><i class="material-icons left  indigo-text text-darken-4">qr_code_scanner</i>Job History</a></li>
        <li><a class="white-text" asp-area="" asp-controller="Settings" asp-action=""><i class="material-icons left  indigo-text text-darken-4">settings</i>Settings</a></li>
        <li><a class="white-text" asp-area="" asp-controller="TestPages" asp-action="">Test Page</a></li>
    </ul>


    <div class="page-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.sidenav');
            var instances = M.Sidenav.init(elems, { draggable: true });
        });
    </script>
   
 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
