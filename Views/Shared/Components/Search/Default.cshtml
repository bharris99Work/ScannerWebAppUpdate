<style>
    .modal-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    #reader {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

        #reader video {
            width: 100% !important;
            height: 100% !important;
            object-fit: cover;
        }

    #qr-canvas {
        display: none;
    }

    #qr-shaded-region {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        box-sizing: border-box;
    }


    .btn-scanning {
        position: absolute;
        bottom: 10px;
        right: 10px;
        z-index: 1;
    }

    .vertical-btn-container {
        display: flex;
        flex-direction: column;
    }

    .text-btn-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        align-content: stretch;
    }

    .scantext-container {
        display: flex;
        flex-direction: column;
        align-self: flex-end;
        width: 75vw;
    }
</style>


<!-- Scaan Modal Structure-->
<div id="ScanDialog" class="modal">
    <div class="modal-container">
        <!--QR Code Reader-->
        <button class="btn-floating btn-small waves-effect blue darken-2 btn-scanning" id="switchCamera"><i class="material-icons">cameraswitch</i>Switch</button>
    </div>
</div>

<div>
    <div class="row">
        <div class="col s12">
            <!--Options for scanning bar codes-->
            <div id="scanOptions" class="center-align">
                <button class="btn waves-effect blue darken-2" id="cameraScan"><i class="material-icons">photo_camera</i></button>
                <button class="btn waves-effect blue darken-2" id="readerScan"><i class="material-icons">barcode_reader</i></button>
            </div>
            <!--Options avalible if reader is selected-->
            <div id="readerOptions" style="display: none;" class="center-align valign-wrapper">

                <button class="btn waves-effect red accent-4 valign" id="cancelReader">Cancel</button>
                <h7 class="valign">Waiting For Barcode Reader Input....</h7>
                <div class="preloader-wrapper small active valign-wrapper">
                    <div class="spinner-layer spinner-green-only valign">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div><div class="gap-patch">
                            <div class="circle"></div>
                        </div><div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class=" col s12">

            <div class="text-btn-container">
                <div class="scantext-container">
                    <!--Displays and holds scanned number-->
                    <label class="text-black text-darken-2" for="resultText">Part Number:</label>
                    <input placeholder="Scan or Enter Part Number" type="text" id="resultText" readonly name="scannedPart">
                </div>

                <div class="vertical-btn-container">
                    <!--Edit and Manually enter item number-->
                    <a id="edit" class="btn-floating btn-small waves-effect blue darken-2"><i class="material-icons">create</i></a>
                    <!--Clear the item number that has been scanned or entered-->
                    <a id="clear" class="btn-floating btn-small waves-effect red accent-4"><i class="material-icons">clear</i></a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dist/scanditscanning.bundle.js"></script>
    <script src="~/js/materialize.min.js"></script>
}