<head>

    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/ScannerWebAppUpdate.styles.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/materialize.min.css">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<style>
    .btn {
        margin: 5px;
    }

    .input-field label {
        font-size: 20px;
    }

</style>


<body>

    <script>
        var ScannedPartReturnOption = "@ViewBag.ScannedPart.ReturnOption"</script>
    <script>
        var ScannedPartTechOption = "@ViewBag.ScannedPart.TechOption"</script>

    <!-- Admin Modal Trigger -->
    <button data-target="modal1" class="btn modal-trigger">Admin</button>

    <!-- Admin Modal Structure TODO: Add password function to dialog -->
    <div id="modal1" class="modal">
        <div>
            <label>Enter Passcode: </label>
            <textarea> </textarea>
            <button class="modal-close">Cancel</button>
            <button class="modal-close">Enter</button>
        </div>
    </div>

    <!--Takes part returned from DB and fills form-->
    <form asp-action="UploadPart" asp-controller="Scanner" method="post">
        <div class="row">
            <div class="input-field col s3">
                <!--Parts Item Number-->
                <label for="partNumber">Part Number:</label>
                <input type="text" id="partNumber" name="ItemNumber" value="@ViewBag.ScannedPart.ItemNumber" />
            </div>
        </div>

        <div class="row">
            <div class="input-field col s3">
                <!--Parts Job Number-->
                <label for="jobNumber">Job Number: </label>
                <input type="text" id="jobNumber" name="JobNumber" value="@ViewBag.ScannedPart.JobNumber" />
            </div>
        </div>

        <div class="row">
            <div class="input-field col s3">
                <!--Parts Quantity-->
                <label for="partQuantity">Quantity: </label>
                <input type="number" id="partQuantity" name="Quantity" value="@ViewBag.ScannedPart.Quantity" />
            </div>
            <div class="btn-container">
                <a class="waves-effect btn-small blue darken-2" id="subQuantity">
                    -
                </a>
                <a class="waves-effect btn-small blue darken-2" id="addQuantity">+</a>
            </div>
        </div>

        <!--Parts Return Option, N/A if does not exist-->
        <label for="returnOptions">Return Options: </label>
        <div class="row">
            <div class="input-field col s3">
                <select id="returnOptions"  name="returnOpt">
                    <option value="0" disabled>Select Return Option:</option>
                    @{
                        int returncount = 1;
                        foreach (var returnOption in ViewBag.ReturnOptions)
                        {
                            <option  value="@returncount">@returnOption.Description</option>
                            returncount++;
                        }
                    }

                </select>
                <input type="text" id="returnOptionText" name="returnOther" style="display:none;" />
            </div>
        </div>
        <!--Clears selected option-->
        <a class="waves-effect btn blue darken-2" id="clearReturn">
            Clear
        </a>
        <!--Allows user to enter an option manually-->
        <a class="waves-effect btn blue darken-2" id="otherReturn">
            Other
        </a>
        <br />

        <!--Parts Tech Option, N/A if does not exist-->
        <label for="techOptions">Tech Options: </label>
        <div class="row">
            <div class="input-field col s3">
                <select id="techOptions" name="techOpt">
                    <option value="0" disabled>Select Tech Option:</option>
                    @{
                        int techcount = 1;
                        foreach (var techOption in ViewBag.TechOptions)
                        {
                            <option value="@techcount">@techOption.Description</option>
                            techcount++;
                        }
                    }

                </select>
                @*    <label for="techOptionText">Other Tech: </label> *@
                <input type="text" id="techOptionText" name="techOther" style="display:none;" />
            </div>
        </div>
        <!--Clears selected option-->
        <a class="waves-effect btn blue darken-2" id="clearTech">
            Clear
        </a>
        <!--Allows user to enter an option manually-->
        <a class="waves-effect btn blue darken-2" id="otherTech">
            Other
        </a>
        <br />

        <!--Resets form back to original state-->
        <a class="waves-effect btn blue darken-2" id="resetForm">
            Reset
        </a>
        <!--Loads scanner page, allows user to rescan-->
        <a class="waves-effect btn blue darken-2" asp-action="" asp-controller="Scanner">New Scan</a>
        <br />
        <!--Submits changes to database-->
        <button class="waves-effect btn blue darken-2" type="submit">Submit</button>
    </form>


    <script src="~/js/materialize.min.js"></script>
    <script src="~/js/partForm.js"></script>
</body>
