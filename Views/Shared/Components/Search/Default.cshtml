<style>

    .modal-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 0 !important;
        margin: 0 !important;
        border-radius: 15px !important;
    }

    #reader {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        padding: 0 !important;
        margin: 0 !important;
        box-sizing: border-box;
        border-radius: 15px !important;
    }

    .part-google {
        display: flex;
        align-items: center; /* Vertically center the items */
        justify-content: center; /* Horizontally center the items */
    }

        .part-google a {
            margin-right: 10px; /* Space between the link and image */
            display: flex;
            align-items: center;
            font-size: 1rem; /* Adjust font size if needed */
        }

        .part-google img {
            max-width: 50px; /* Adjust max width of the image */
            height: auto;
            display: block;
            border: none;
        }


    .result-header-container {
       position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(128, 128, 128, 0.75); /* Grey background with 75% opacity */
        z-index: 2;
        padding: 10px;
        box-sizing: border-box;


    }

    .result-header-container .row {
        margin: 0;
        padding: 5px;
        color: white; /* Text color for visibility */
    }

    .scan-button-container {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: 2;
        padding: 10px;
        display: flex;
        justify-content: center;
        box-sizing: border-box;
    }

        .scan-button{
        margin: 5px 5px 35px 5px;
        border: none;
        cursor: pointer;
        border-radius: 10px !important; /* Rounded edges */
        }


 
</style>



<div id="resultcontainer" class="center-align valign">
    <div class="row">
        <div class="col s12">
            <!--Options for scanning bar codes-->
            <div id="scanOptions" class="center-align">
                <button class="btn waves-effect blue darken-2" id="cameraScan"><i class="material-icons">photo_camera</i></button>
                <button class="btn waves-effect blue darken-2" id="readerScan"><i class="material-icons">barcode_reader</i></button>
            </div>
            <!--Options avalible if reader is selected-->
            <div id="readerOptions" style="display: none;" class="center-align valign-wrapper">

                <button class="btn waves-effect red accent-4 valign" id="cancelReader">Cancel</button>
                <h7 class="valign">Waiting For Barcode Reader Input....</h7>
                <div class="preloader-wrapper small active valign-wrapper">
                    <div class="spinner-layer spinner-green-only valign">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div><div class="gap-patch">
                            <div class="circle"></div>
                        </div><div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div  class="row center">
        <div id="resultcontainer" class="col s4 valign">
            <label class="text-black text-darken-2" for="resultText">Part Number:</label>
            <input placeholder="Scan or Enter Part Number" type="text" id="resultText" readonly name="scannedPart" value="">
        </div>

    </div>

    <div class="row" style="display:none;">
        <div class="col s12">

            <div class="text-btn-container">
                <div class="scantext-container">
                    <!--Displays and holds scanned number-->
                    @* <label  class="text-black text-darken-2" for="resultText">Part Number:</label> *@
                    @* <input placeholder="Scan or Enter Part Number" type="text" id="resultText" readonly name="scannedPart" value="testpart5"> *@
                </div>

                <div class="vertical-btn-container" >
                    <!--Edit and Manually enter item number-->
                    <a id="edit" class="btn-floating btn-small waves-effect blue darken-2"><i class="material-icons">create</i></a>
                    <!--Clear the item number that has been scanned or entered-->
                    <a id="clear" class="btn-floating btn-small waves-effect red accent-4"><i class="material-icons">clear</i></a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dist/scanditscanning.bundle.js"></script>
    <script src="~/js/materialize.min.js"></script>
}